<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="1dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/cardBackgroundColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/userCon"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/cardBackgroundColor"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_image"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="User Name"
                    android:textColor="@color/txtColor1"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="14dp"
                    android:textColor="@color/txtColor1"
                    android:text="On Oct 7 2021"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userCon"
            android:gravity="center">

            <TextView
                android:id="@+id/bodyComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleComment"
                android:padding="4dp"
                android:text="Vola Automobile â€“ Mobile App UI Kit for Sketch App dedicated for Buy, for Sketch App dedicated for Buy, Sell, Rent, News, Reviews for your Dream Car"
                android:textColor="@color/txtColor1"
                android:textSize="14dp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>