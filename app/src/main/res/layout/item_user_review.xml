<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/cardBackgroundColor"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="18dp"
            android:textColor="@color/txtColor1"
            android:text="4.5/5"/>

        <RatingBar
            android:id="@+id/rateItem"
            android:layout_toEndOf="@id/rateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:rating="4.5"
            android:stepSize=".1"
            android:progressBackgroundTint="@color/loginColor1"
            android:progressTint="@color/conColor6"
            android:layout_margin="4dp"
            style="@style/Widget.AppCompat.RatingBar.Small"/>

        <TextView
            android:id="@+id/titleComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rateItem"
            android:padding="4dp"
            android:text="Title Comment"
            android:textColor="@color/txtColor1"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bodyComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titleComment"
            android:lines="4"
            android:padding="4dp"
            android:text="Vola Automobile â€“ Mobile App UI Kit for Sketch App dedicated for Buy, for Sketch App dedicated for Buy, Sell, Rent, News, Reviews for your Dream Car"
            android:textColor="@color/txtColor1"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/moreComment"
            android:layout_below="@id/bodyComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textSize="14dp"
            android:textColor="@color/txtColor5"
            android:text="More Read"/>

        <LinearLayout
            android:id="@+id/userCon"
            android:gravity="center"
            android:layout_below="@id/moreComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/cardBackgroundColor"
                android:layout_margin="4dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="25dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user_image"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="User Name"
                    android:textColor="@color/txtColor1"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:textSize="14dp"
                    android:textColor="@color/txtColor1"
                    android:text="On Oct 7 2021"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/userCon"
            android:gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_heart"
                android:drawablePadding="4dp"
                android:drawableTint="@color/txtColor5"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="2021"
                android:textColor="@color/txtColor1"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_view"
                android:drawablePadding="4dp"
                android:drawableTint="@color/txtColor4"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="2021"
                android:textColor="@color/txtColor1"
                android:textSize="14dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_comment"
                android:drawablePadding="4dp"
                android:drawableTint="@color/txtColor4"
                android:gravity="center_vertical"
                android:padding="4dp"
                android:text="2021"
                android:textColor="@color/txtColor1"
                android:textSize="14dp" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>