<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.cars.ui.UserReviewsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/cardBackgroundColor"
                android:id="@+id/reviewCon"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:padding="16dp"
                        android:clickable="true"
                        android:background="@drawable/con_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/txtColor1"
                            android:textSize="18dp"
                            android:text="@string/user_reviews"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/txtColor5"
                            android:textSize="16dp"
                            android:drawableEnd="@drawable/ic_next"
                            android:drawableTint="@color/txtColor5"
                            android:gravity="center"
                            android:drawablePadding="4dp"
                            android:text="@string/see_all"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/descReviewCon"
                        android:layout_width="match_parent"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/totalReviewCart"
                            android:gravity="center_vertical
"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginHorizontal="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:layout_margin="2dp"
                                    android:textColor="@color/txtColor1"
                                    android:textSize="18dp"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_star"
                                    app:tint="@color/txtColor3" />

                                <ProgressBar
                                    android:id="@+id/progressStar5"
                                    android:layout_width="match_parent"
                                    android:layout_height="4dp"
                                    android:layout_weight="1"
                                    android:progress="50"
                                    android:layout_margin="4dp"
                                    style="@style/MyProgressBarTwo"
                                    android:progressTint="@color/progressColor1"
                                    android:thumbTint="@color/conColor5"/>

                                <TextView
                                    android:id="@+id/countStar5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:layout_margin="1dp"
                                    android:textSize="16dp"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginHorizontal="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4"
                                    android:layout_margin="2dp"
                                    android:textColor="@color/txtColor1"
                                    android:textSize="18dp"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_star"
                                    app:tint="@color/txtColor3" />


                                <ProgressBar
                                    android:id="@+id/progressStar4"
                                    android:layout_width="match_parent"
                                    android:layout_height="4dp"
                                    android:layout_weight="1"
                                    android:progress="30"
                                    android:layout_margin="4dp"
                                    style="@style/MyProgressBarTwo"
                                    android:progressTint="@color/progressColor2"
                                    android:thumbTint="@color/conColor5"/>


                                <TextView
                                    android:id="@+id/countStar4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:layout_margin="1dp"
                                    android:textSize="16dp"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginHorizontal="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3"
                                    android:layout_margin="2dp"
                                    android:textColor="@color/txtColor1"
                                    android:textSize="18dp"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_star"
                                    app:tint="@color/txtColor3" />


                                <ProgressBar
                                    android:id="@+id/progressStar3"
                                    android:layout_width="match_parent"
                                    android:layout_height="4dp"
                                    android:layout_weight="1"
                                    android:progress="20"
                                    android:layout_margin="4dp"
                                    style="@style/MyProgressBarTwo"
                                    android:progressTint="@color/progressColor3"
                                    android:thumbTint="@color/conColor5"/>

                                <TextView
                                    android:id="@+id/countStar3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:layout_margin="1dp"
                                    android:textSize="16dp"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginHorizontal="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="2"
                                    android:layout_margin="2dp"
                                    android:textColor="@color/txtColor1"
                                    android:textSize="18dp"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_star"
                                    app:tint="@color/txtColor3" />


                                <ProgressBar
                                    android:id="@+id/progressStar2"
                                    android:layout_width="match_parent"
                                    android:layout_height="4dp"
                                    android:progress="60"
                                    android:layout_weight="1"
                                    android:layout_margin="4dp"
                                    style="@style/MyProgressBarTwo"
                                    android:progressTint="@color/progressColor4"
                                    android:thumbTint="@color/conColor5"/>


                                <TextView
                                    android:id="@+id/countStar2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:layout_margin="1dp"
                                    android:textSize="16dp"/>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_marginHorizontal="4dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1"
                                    android:layout_margin="2dp"
                                    android:textColor="@color/txtColor1"
                                    android:textSize="18dp"/>

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_star"
                                    app:tint="@color/txtColor3" />

                                <ProgressBar
                                    android:id="@+id/progressStar1"
                                    android:layout_width="match_parent"
                                    android:layout_height="4dp"
                                    android:progress="40"
                                    android:layout_weight="1"
                                    android:layout_margin="4dp"
                                    style="@style/MyProgressBarTwo"
                                    android:progressTint="@color/progressColor5"/>


                                <TextView
                                    android:id="@+id/countStar1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:layout_margin="1dp"
                                    android:textSize="16dp"/>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/totalReviewCart"
                            android:layout_width="100dp"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/ic_star2"
                                    app:tint="@color/conColor6" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="3.5"
                                    android:textStyle="bold"
                                    android:textColor="@color/txtColor2"
                                    android:textSize="20dp" />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="4dp"
                                android:gravity="center"
                                android:text="@string/based_on"
                                android:textColor="@color/txtColor1"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:layout_marginTop="4dp"
                                android:layout_marginEnd="4dp"
                                android:layout_marginBottom="4dp"
                                android:gravity="center"
                                android:text="154 Reviews"
                                android:textColor="@color/txtColor3"
                                android:textSize="16dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/cardBackgroundColor"
                android:id="@+id/reviewAllCon"
                android:layout_below="@id/reviewCon"
                android:layout_marginHorizontal="4dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/reviewTypeList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_below="@id/reviewTypeList"
                        android:id="@+id/userReviewList"
                        android:nestedScrollingEnabled="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                style="@style/btnStyleHome"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/reviewAllCon"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:visibility="gone"
                android:background="@drawable/btn_app"
                android:gravity="center"
                android:paddingHorizontal="32dp"
                android:text="@string/write_a_review"
                android:textSize="17dp" />

        </RelativeLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:src="@drawable/ic_add_review"
        android:tint="@color/white"
        app:backgroundTint="@color/btnColor1" />

</RelativeLayout>