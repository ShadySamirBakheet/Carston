<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardBackgroundColor="@color/cardBackgroundColor"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_margin="2dp"
                app:cardBackgroundColor="@color/cardBackgroundColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgItem1"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:background="@color/lineColor"
                        android:src="@drawable/blue_car"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:textColor="@color/txtColor1"
                        android:text="car name with short desc"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:textSize="10dp"
                        android:textColor="@color/txtColor4"
                        android:text="14.5 K.M  . 3996 CC  .  Manual/Auto"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:textColor="@color/txtColor1"
                        android:text="Starting @ 255,000$"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_margin="2dp"
                app:cardBackgroundColor="@color/cardBackgroundColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgItem2"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/image2"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:textColor="@color/txtColor1"
                        android:text="car name with short desc"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:textSize="10dp"
                        android:textColor="@color/txtColor4"
                        android:text="14.5 K.M  . 3996 CC  .  Manual/Auto"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:textSize="14dp"
                        android:singleLine="true"
                        android:textColor="@color/txtColor1"
                        android:text="Starting @ 255,000$"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/cardBackgroundColor"
            android:layout_centerHorizontal="true"
            android:layout_margin="35dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="15dp"
            app:contentPadding="2dp">

            <androidx.cardview.widget.CardView
                android:layout_centerHorizontal="true"
                android:layout_width="26dp"
                android:layout_height="26dp"
                app:cardCornerRadius="13dp"
                app:cardBackgroundColor="@color/black">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="VS"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="@color/white"/>

            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>