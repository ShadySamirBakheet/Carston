<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/cardBackgroundColor"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/image6" />

        <TextView
            android:id="@+id/titleItem"
            android:layout_below="@id/imgItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="4dp"
            android:textSize="18dp"
            android:textColor="@color/txtColor1"
            android:text="car name with short desc"/>

        <TextView
            android:id="@+id/bodyItem"
            android:layout_below="@id/titleItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textSize="12dp"
            android:textColor="@color/txtColor4"
            android:text="car name with short desc"/>

        <TextView
            android:layout_below="@id/bodyItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textSize="12dp"
            android:gravity="center"
            android:textColor="@color/txtColor4"
            android:drawableStart="@drawable/ic_heart"
            android:drawableTint="@color/txtColor4"
            android:text="1504"/>

        <TextView
            android:layout_below="@id/bodyItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="@color/txtColor4"
            android:drawableStart="@drawable/ic_view"
            android:drawableTint="@color/txtColor4"
            android:text="1804"/>

        <TextView
            android:layout_below="@id/bodyItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textSize="12dp"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:textColor="@color/txtColor4"
            android:drawableStart="@drawable/ic_comment"
            android:drawableTint="@color/txtColor4"
            android:text="1604"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>